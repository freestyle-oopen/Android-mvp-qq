<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bk"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/DIMEN_110PX"
        android:layout_height="@dimen/DIMEN_110PX"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/DIMEN_40PX"
        android:src="@mipmap/default_avatar"
        android:text="login  login"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyEditText"
        android:imeOptions="actionNext"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:hint="用户名"/>
    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:theme="@style/MyEditText"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginBottom="@dimen/DIMEN_35PX"
        android:hint="密码"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/btu_login_selector"
        android:layout_margin="@dimen/DIMEN_30PX"
        android:text="登     录"/>
    <TextView
        android:id="@+id/tv_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户"
        android:layout_gravity="right"
        android:textColor="@color/pickerview_timebtn_nor"
        android:textSize="@dimen/DIMEN_35PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"/>

</LinearLayout>