<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/first_pingyin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pickerview_wheelview_textcolor_divider"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:text="A"
        android:textColor="@color/pickerview_topbar_title"
        android:textSize="@dimen/DIMEN_30PX"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contacts_item_selector"
        android:padding="6dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/DIMEN_100PX"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_centerVertical="true"
            android:src="@mipmap/avatar_9" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img"
            android:text="名字"
            android:textColor="@color/pickerview_wheelview_textcolor_center"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:id="@+id/add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:background="@drawable/add_friend_nor"
            android:paddingBottom="3dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="3dp"
            android:text="添加"
            android:textColor="#000"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/pickerview_wheelview_textcolor_out" />
</LinearLayout>
