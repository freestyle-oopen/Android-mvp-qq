<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<TextView
    android:id="@+id/time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingTop="@dimen/DIMEN_10PX"
    android:text="11月11日 20:45"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/send_status"
        android:layout_width="@dimen/DIMEN_40PX"
        android:layout_height="@dimen/DIMEN_40PX"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/DIMEN_200PX"
        android:layout_marginRight="@dimen/DIMEN_10PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:src="@mipmap/msg_error" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/DIMEN_500PX"
        android:layout_gravity="center_vertical"
        android:background="@drawable/send_msg_normal"
        android:text="打发斯蒂芬啊山东飞机爱搜地方解耦排第几佛爱上啊冬季风欧艾斯大姐夫啊山东飞机爱搜地方就"
        android:textSize="17sp"

        />

    <ImageView
        android:layout_width="@dimen/DIMEN_70PX"
        android:layout_height="@dimen/DIMEN_70PX"
        android:layout_marginLeft="@dimen/DIMEN_10PX"
        android:layout_marginRight="@dimen/DIMEN_9PX"
        android:src="@mipmap/avatar3" />
</LinearLayout>
</LinearLayout>